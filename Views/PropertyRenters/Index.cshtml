@model IEnumerable<Caviris_MIS4200.Models.PropertyRenter>

@{
    ViewBag.Title = "Property Renters Index";
}

<h2>Property Renters Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.property.streetAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.renter.fullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateTimeRented)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.monthlyRent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateTimeEnded)
        </th>
        <th></th>
