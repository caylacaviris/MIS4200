@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.property.streetAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.renter.fullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dateTimeRented)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.monthlyRent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dateTimeEnded)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.propertyRenterID }) |
            @Html.ActionLink("Details", "Details", new { id=item.propertyRenterID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.propertyRenterID })
        </td>
    </tr>
